generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Chef {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  bio     String
  recipes Recipe[]
}

model Recipe {
  id          Int          @id @default(autoincrement())
  title       String
  description String
  imageUrl    String
  chefId      Int
  ingredients Ingredient[]
  tags        RecipeTag[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  chef Chef @relation(fields: [chefId], references: [id], onDelete: Restrict, onUpdate: Cascade)
}

model Ingredient {
  id       Int    @id @default(autoincrement())
  name     String
  amount   String
  recipeId Int
  recipe   Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model Tag {
  id      Int         @id @default(autoincrement())
  name    String      @unique
  recipes RecipeTag[]
}

model RecipeTag {
  recipe   Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  recipeId Int
  tag      Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  tagId    Int

  @@id([recipeId, tagId])
}
